{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SysyCCompiler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/CCL",
            "args": [
                "${workspaceFolder}/test/test_array_param_pass.c"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "设置调试信息显示格式",
                    "text": "-gdb-set print pretty on",
                    "ignoreFailures": true
                },
                {
                    "description": "启用调试符号搜索路径",
                    "text": "-gdb-set debug-file-directory ${workspaceFolder}/build",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}